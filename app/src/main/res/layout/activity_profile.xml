<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMessage1"
    tools:context="com.firebase.firemess.ProfileActivity">


    <ImageView
        android:id="@+id/default_visit_profile_pic"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_margin="5dp"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/visit_profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/default_visit_profile_pic"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Display UserName"
        android:textColor="@android:color/white"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/visit_profile_userstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/visit_profile_username"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Display UserStatus"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/visit_addfriend_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:text="Add to friends"
        android:textSize="17dp" />

    <Button
        android:id="@+id/visit_removefriend_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/visit_addfriend_button"
        android:layout_marginBottom="14dp"
        android:text="Decline friend request"
        android:textSize="17dp" />

</RelativeLayout>
